{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "command": "dotnet",
      "args": [
        "clean",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/src"
      }
    },
    {
      "label": "build",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "dependsOn": "clean",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/src"
      }
    },
    {
      "label": "clean release",
      "command": "dotnet",
      "args": [
        "clean",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/src"
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "args": [
        "publish",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "dependsOn": "clean release",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/src"
      }
    },
    {
      "label": "tf-init",
      "command": "terraform",
      "args": [
        "init"
      ],
      "type": "process",
      "problemMatcher": "$go",
      "options": {
        "cwd": "${workspaceFolder}/eng"
      }
    },
    {
      "label": "tf-apply",
      "command": "terraform",
      "args": [
        "apply"
      ],
      "type": "process",
      "dependsOrder": "sequence",
      "dependsOn": [ "publish", "tf-init"],
      "problemMatcher": "$go",
      "options": {
        "cwd": "${workspaceFolder}/eng"
      }
    },
    {
      "label": "tf-destroy",
      "command": "terraform",
      "args": [
        "destroy",
        "-auto-approve",
      ],
      "type": "process",
      "problemMatcher": "$go",
      "options": {
        "cwd": "${workspaceFolder}/eng"
      }
    },
    {
      "type": "func",
      "dependsOn": "build",
      "options": {
        "cwd": "${workspaceFolder}/src/bin/Debug/netcoreapp3.1"
      },
      "command": "host start",
      "isBackground": true,
      "problemMatcher": "$func-dotnet-watch"
    }
  ]
}